# ============================================
# DATABASE CONFIGURATION
# ============================================
# Tipo de base de datos: sqlite (por defecto) o postgresql
DB_TYPE=sqlite

# --- SQLite Configuration (cuando DB_TYPE=sqlite) ---
SQLITE_PATH=./db.sqlite3

# --- PostgreSQL Configuration (cuando DB_TYPE=postgresql) ---
# Descomentar y configurar cuando uses PostgreSQL
# POSTGRES_USER=mnemos_user
# POSTGRES_PASSWORD=tu_contraseña_segura
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=mnemos_db

# --- PostgreSQL Connection Pool (opcional) ---
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20

# ============================================
# USER CONFIGURATION
# ============================================
# Usuario por defecto (se crea automáticamente al iniciar)
DEFAULT_USER_ID=1
DEFAULT_USER_NAME=Tu Nombre
DEFAULT_USER_EMAIL=tu@email.com
DEFAULT_USER_BIRTH=1990-01-01

# ============================================
# GOOGLE CALENDAR CONFIGURATION
# ============================================
# Ruta al archivo JSON de Service Account de Google
GOOGLE_SERVICE_ACCOUNT_FILE=credentials/service-account.json
# ID del calendario (usa "primary" para el calendario principal o un email específico)
GOOGLE_CALENDAR_ID=primary
# Zona horaria para eventos (formato: America/Lima, America/Mexico_City, etc.)
TIMEZONE=America/Lima

# ============================================
# APPLICATION SETTINGS
# ============================================
# ENV=development

# ============================================
# OPENTELEMETRY CONFIGURATION (Opcional)
# ============================================
# Habilitar OpenTelemetry para observabilidad (logs, traces, metrics)
OTEL_ENABLED=false

# Nombre del servicio (para identificarlo en herramientas de observabilidad)
OTEL_SERVICE_NAME=mnemos

# Endpoint OTLP para exportar datos (ej: Jaeger, Honeycomb, etc.)
# Si no se configura, se usa console exporter (solo para desarrollo)
# OTEL_EXPORTER_ENDPOINT=http://localhost:4317

# Ambiente de deployment
OTEL_ENVIRONMENT=development

# ============================================
# STREAMLIT DASHBOARD (Opcional)
# ============================================
# URL base de la API (para que Streamlit se conecte)
API_BASE_URL=http://localhost:8000/api/v1
